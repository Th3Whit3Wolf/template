{
	"name": "template",
	"version": "1.0.0",
	"description": "My Web Development Template w/ Gulp, SASS, & Typescript.",
	"main": "src/index.html",
	"author": "David (https://github.com/TheWhiteWolf1337)",
	"license": "MIT",
	"devDependencies": {
		"eslint": "^5.15.1",
		"eslint-config-prettier": "^4.1.0",
		"gulp": "^4.0.0",
		"gulp-cache": "^1.1.1",
		"gulp-cssnano": "^2.1.3",
		"gulp-ext-replace": "^0.3.0",
		"gulp-htmlmin": "^5.0.1",
		"gulp-imagemin": "^5.0.3",
		"gulp-prettier": "^2.1.0",
		"gulp-sass": "^4.0.2",
		"gulp-terser": "^1.1.7",
		"gulp-tslint": "^8.1.4",
		"gulp-typescript": "^5.0.1",
		"imagemin-giflossy": "^5.1.10",
		"imagemin-mozjpeg": "^8.0.0",
		"imagemin-pngquant": "^7.0.0",
		"imagemin-webp": "^5.0.0",
		"imagemin-zopfli": "^6.0.0",
		"prettier-stylelint": "^0.4.2",
		"stylelint": "^9.10.1",
		"stylelint-config-idiomatic-order": "^6.2.0",
		"tslint": "^5.14.0",
		"tslint-config-prettier": "^1.18.0",
		"tslint-microsoft-contrib": "^6.1.0",
		"typescript": "^3.3.3333"
	},
	"scripts": {
		"tslint": "tslint -c src/ts/tslint.json src/ts/*.ts"
	},
	"stylelint": {
		"extends": [
			"stylelint-config-idiomatic-order",
			"./node_modules/prettier-stylelint/config.js"
		],
		"rules": {
			"unit-whitelist": [
				"rem",
				"deg",
				"vh",
				"em",
				"px",
				"fr",
				"%",
				"s"
			],
			"string-quotes": "single"
		},
		"ignoreFiles": "./dist/css/main.css"
	},
	"eslint": {
		"extends": [
			"prettier",
			"prettier/@typescript-eslint"
		],
		"plugins": [
			"prettier"
		],
		"rules": {
			"prettier/prettier": "error"
		}
	},
	"prettier": {
		"printWidth": 80,
		"tabWidth": 4,
		"useTabs": true,
		"semi": false,
		"singleQuote": true,
		"trailingComma": "none",
		"bracketSpacing": true,
		"jsxBracketSameLine": false
	}
}
